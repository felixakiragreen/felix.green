{
  "compilerOptions": {
    "lib": ["DOM", "ES2016", "WebWorker"],
    "target": "ES2016",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*", "src/node_modules/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
